<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.ActivityFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/SecondaryActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/backColor"
        app:title="">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingMultiplier="0"
            android:paddingTop="6dp"
            android:text="@string/title_activity"
            android:textColor="?attr/textColorPrimary2" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <Spinner
            android:id="@+id/spn_category"
            android:layout_width="180dp"
            android:layout_height="?attr/dropdownListPreferredItemHeight"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_blue_outline"
            android:popupBackground="@android:color/white"
            android:popupElevation="3dp"
            android:paddingEnd="14dp"
            android:paddingStart="0dp"
            android:dropDownWidth="180dp"
            android:spinnerMode="dropdown"
            android:padding="10dp"
            android:elevation="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search_article"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_button"
            app:backgroundTint="@color/btn_light_color"
            app:iconTint="?attr/textColorPrimary2"
            android:elevation="13dp"
            android:stateListAnimator="@null"
            app:elevation="13dp"
            app:icon="@drawable/ic_search"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/spn_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/spn_category" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:layout_marginBottom="-16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/spn_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActivitiesList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbarSize="0dp"
            android:divider="@null"
            android:visibility="visible"
            android:layout_marginTop="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/spn_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="gone"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:spanCount="1"
            tools:listitem="@layout/item_list_activity"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/spn_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.16000003"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>