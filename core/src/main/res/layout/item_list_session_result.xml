<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_date"
        style="@style/Theme.NaraSource.Body_5"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="10dp"
        tools:text="17 November 2022"
        android:textColor="#2B2B2B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_time_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_date"
        app:layout_constraintVertical_bias="0.0"
        app:tint="#7D7D7D" />

    <TextView
        android:id="@+id/tv_item_time"
        style="@style/Theme.NaraSource.Body_6"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="60dp"
        android:textColor="#7D7D7D"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_price"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        tools:text="13:00 WIB - 13.20 WIB" />
    <TextView
        android:id="@+id/tv_item_price"
        style="@style/Theme.NaraSource.Body_6"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        tools:text="Rp20k"
        android:textColor="#7D7D7D"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_time"
        app:layout_constraintTop_toTopOf="@+id/tv_item_date"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="#7D7D7D"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>