<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"
    tools:background="#000"
    android:padding="0dp"
    android:gravity="center">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_search_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxStrokeColor="@color/white"
        app:boxBackgroundColor="?attr/colorTransparent"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="?attr/colorOnPrimary"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_search_input"
            style="@style/Theme.NaraSource.Body_5"
            android:layout_width="match_parent"
            android:hint="@string/search_hint"
            android:inputType="text"
            android:paddingTop="14dp"
            android:background="?attr/colorTransparent"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorOnPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_transparent"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/search"
        android:textColor="?attr/colorOnPrimary"
        android:enabled="false"
        app:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_search_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>