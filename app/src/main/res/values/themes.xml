<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NaraQ" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionColorDisabled">@color/blue_100</item>
        <item name="backColor">@color/white</item>

        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">#5F676F</item>
        <item name="textColorDisabled">#B3B3B3</item>

        <item name="textColorPrimary2">@color/blue_300</item>
        <item name="textColorSecondary2">@color/blue_100</item>
    </style>

    <style name="Theme.NaraQ.SplashScreen" parent="Theme.SplashScreen">
        <!--        API < 31           -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/blue_300</item>

        <!--        API >= 32          -->
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/blue_300</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_branding</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.NaraQ</item>
    </style>

    <style name="Theme.NaraQ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NaraQ.WrappedView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.NaraQ.Header_4" parent="Theme.NaraQ.WrappedView">
        <item name="android:fontFamily">@font/reem_kufi_semibold</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Theme.NaraQ.Header_5" parent="Theme.NaraQ.WrappedView">
        <item name="android:fontFamily">@font/reem_kufi_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Theme.NaraQ.Header_6" parent="Theme.NaraQ.WrappedView">
        <item name="android:fontFamily">@font/reem_kufi_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.NaraQ.Body_5" parent="Theme.NaraQ.WrappedView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.NaraQ.Body_6" parent="Theme.NaraQ.WrappedView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.NaraQ.Body_7" parent="Theme.NaraQ.WrappedView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.NaraQ.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>