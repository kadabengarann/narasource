<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.NaraSource" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionColorDisabled">@color/blue_100</item>
        <item name="backColor">@color/white</item>

        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">#5F676F</item>
        <item name="textColorDisabled">#B3B3B3</item>

        <item name="textColorPrimary2">@color/blue_300</item>
        <item name="textColorSecondary2">@color/blue_100</item>

        <item name="colorTransparent">#00000000</item>

        <item name="colorPrimaryContainer">?attr/colorOnPrimary</item>
        <item name="colorOnPrimaryContainer">@color/blue_300</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.NaraSource.SplashScreen" parent="Theme.SplashScreen">
        <!--        API < 31           -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/blue_300</item>

        <!--        API >= 32          -->
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/blue_300</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_branding</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.NaraSource</item>
    </style>

    <!--          AppBar Style           -->
    <style name="Theme.NaraSource.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.NaraSource.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>
    <style name="TitleToolbarCollapse">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:textColorSecondary">@android:color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>
    <style name="TitleToolbar">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">21sp</item>
    </style>



    <style name="Theme.NaraSource.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NaraSource.WrappedView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.NaraSource.Header_4" parent="Theme.NaraSource.WrappedView">
        <item name="android:fontFamily">@font/reem_kufi_medium</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Theme.NaraSource.Header_5" parent="Theme.NaraSource.WrappedView">
        <item name="android:fontFamily">@font/reem_kufi_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Theme.NaraSource.Header_6" parent="Theme.NaraSource.WrappedView">
        <item name="android:fontFamily">@font/reem_kufi_medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.NaraSource.Body_5" parent="Theme.NaraSource.WrappedView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.NaraSource.Body_6" parent="Theme.NaraSource.WrappedView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.NaraSource.Body_7" parent="Theme.NaraSource.WrappedView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.NaraSource.Button_Main" parent="Theme.NaraSource.Header_5">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.NaraSource.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.NaraSource.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!--  Bottom Nav Bar  -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/Theme.NaraSource.BottomNavigationView</item>
    </style>
    <style name="Theme.NaraSource.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_400</item>
        <item name="android:height">27dp</item>
    </style>
    <style name="Theme.NaraSource.BottomNavigationView" >
        <item name="itemIconTint">@color/navbar_item_tint</item>
        <item name="itemTextColor">@color/navbar_item_tint</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.NaraSource.BottomNavigationView.ActiveIndicator</item>
    </style>

    <style name="Theme.NaraSource.Fab_Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.NaraSource.Button_Light_2" parent="Theme.NaraSource.Header_5">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="iconPadding">32dp</item>
        <item name="backgroundTint">@color/btn_light_blue</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  ActionBar  -->
    <style name="MainActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="SecondaryActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_dialog</item>
    </style>
</resources>